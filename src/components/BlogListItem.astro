---
import { Image } from "@astrojs/image/components";

import { formatDate } from "../helpers/formatDate";
import PostTags from "./PostTags.astro";

const { post } = Astro.props;

const { frontmatter } = post;

const maxLength = 340;
let { description } = frontmatter;

if (description.length > maxLength) {
  description = `${description.slice(0, maxLength)}...`;
}
---

<article class="max-w-md mx-auto md:max-w-none grid md:grid-cols-2 gap-6 md:gap-8">
  <a class="relative block group p-0 link" href={post.url}>
    <Image
      src={frontmatter.heroImage}
      class="inset-0 w-full h-full object-cover mb-6 rounded shadow-lg hover:ring-4 hover:ring-sky-400 dark:hover:ring-sky-500 duration-300"
      width={400}
      height={300}
      alt={frontmatter.description}
    />
  </a>
  <div>
    <header>
      <h2 class="text-xl sm:text-2xl font-bold mb-2">
        <a
          class="hover:text-blue-600 decoration-1 transition ease-in duration-200 px-0"
          href={post.url}
        >
          {frontmatter.title}
        </a>
      </h2>
    </header>
    <p class="text-md sm:text-lg flex-grow">
      {description}
    </p>

    <footer class="mt-4">
      <div>
        <span class="text-gray-500 dark:text-slate-400">
          <time datetime={post.pubDate}>{formatDate(frontmatter.pubDate)}</time>
        </span>
      </div>
      <div class="mt-4">
        <PostTags tags={frontmatter.tags} />
      </div>
    </footer>
  </div>
</article>
