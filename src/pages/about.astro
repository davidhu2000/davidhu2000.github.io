---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import Technologies from "../components/Technologies.astro";
import IconLoading from "../components/icons/IconLoading.astro";
import PageLayout from "../layouts/PageLayout.astro";
import myImage from "../assets/main/me.webp";

const canonical = new URL(`about`, Astro.site);

const title = "About David Hu";
const description = "Sometimes I write code. Other times, I write code with coffee.";

const steps = [
  {
    icon: "mdi:company",
    name: "Co-founder & CTO @ Magic Hour",
    content: "Building AI Video & Image Creation Platform",
    content2: "Still doing full stack work, now just without needing to write unit tests.",
    link: "https://magichour.ai",
    linkText: "Magic Hour",
  },
  {
    icon: "mdi:work",
    name: "Lead Full Stack Engineer",
    content: "Maker of full stack apps. Fan of infrastructure as code. Builder of CI/CD pipelines.",
    content2:
      "My favorite part of the role is the variety, going from frontend one day, to backend the next day, then infrastructure and cost optimizations. I like it all!",
    link: "https://github.com/davidhu2000",
    linkText: "My Github Profile",
  },
  {
    icon: "mdi:open-source-initiative",
    name: "Open Source",
    content:
      "I maintain an NPM package titled 'React Spinners', a set of loading components. 28 million downloads and counting ðŸ™‚",
    link: "https://www.davidhu.io/react-spinners",
    linkText: "React Spinners Demo",
  },
  // {
  //   icon: "mdi:stackoverflow",
  //   name: "Stack Overflow",
  //   content:
  //     "I'm not sure I can write code without this website. I tried to contribute whenever I can. My goal is to reach 10,000 reputations by end of this year.",
  //   link: "https://stackoverflow.com/users/6496010/davidhu",
  //   linkText: "My StackOverflow Profile",
  // },
  {
    icon: "mdi:mood",
    name: "Thank you for reading!",
  },
];
---

<PageLayout meta={{ title, description, canonical }}>
  <main>
    <section class="py-8 sm:py-16 lg:py-20 mx-auto">
      <div
        class="container mx-auto px-4 sm:px-6 max-w-3xl prose prose-lg lg:prose-xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8"
      >
        <IconLoading class="my-0 mx-auto" />

        <figure
          class="p-4 italic border-l-4 bg-neutral-100 text-gray-500 dark:text-white border-neutral-500 quote dark:bg-gray-800 shadow-xl hover:shadow-lg transition"
        >
          <p>Sometimes I write code. Other times, I write code with coffee.</p>
          <figcaption class="text-right">
            â€” David Hu, <cite>Unknown</cite>
          </figcaption>
        </figure>
      </div>
    </section>

    <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl">
      <div class="grid gap-6 row-gap-10 md:grid-cols-2">
        <div class="md:py-6 md:pr-16 text-gray-700 dark:text-gray-400">
          {
            steps.map((step) => (
              <div class="flex">
                <div class="flex flex-col items-center mr-4">
                  <div>
                    <div class="flex items-center justify-center w-10 h-10 rounded-full border-blue-500 border-2">
                      <Icon
                        name={step.icon}
                        class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold"
                      />
                    </div>
                  </div>
                  {step.content && <div class="w-px h-full bg-gray-300 dark:bg-slate-500" />}
                </div>
                <div class="pt-1 pb-8 flex flex-col gap-2">
                  <p class=" text-xl font-bold text-gray-900 dark:text-slate-300">{step.name}</p>
                  <p class="">{step.content}</p>
                  <p>{step.content2}</p>

                  {step.link && (
                    <a
                      href={step.link}
                      class="font-medium text-blue-600 dark:text-blue-500 flex items-center gap-1"
                      target="_blank"
                    >
                      {step.linkText}
                      <Icon name="mdi:external-link" />
                    </a>
                  )}
                </div>
              </div>
            ))
          }
        </div>
        <div class="relative hidden md:block">
          <Image
            alt="My Portrait"
            src={myImage}
            class="inset-0 object-cover object-top w-full rounded-md shadow-lg md:absolute md:h-full dark:brightness-75"
            sizes="(max-width: 768px) 100vw, 432px"
          />
        </div>
      </div>
    </section>

    <Technologies />
  </main>
</PageLayout>
